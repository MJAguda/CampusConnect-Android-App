<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ams.campusconnect.SplashActivity"
    android:orientation="vertical"
    android:background="#F9ED69">

    <!--Body-->
    <LinearLayout
        android:id="@+id/body_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="35px"
        android:padding="50px">

        <ImageView
            android:id="@+id/appLogo_ImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/campus_connect_logo" />

        <TextView
            android:id="@+id/appName_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Campus Connect"
            android:textAlignment="center"
            android:textColor="#6A2C70"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/version_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Version : 1.0.2"
            android:textAlignment="center"
            android:textColor="#6A2C70"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/announcement_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F08A5D"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Announcement!"
            android:textAlignment="center"
            android:textColor="#6A2C70"
            android:textSize="20sp"
            android:textStyle="normal" />

    </LinearLayout>

    <!--Footer-->
    <LinearLayout
        android:id="@+id/footer_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_footer_bg"
        android:orientation="vertical"
        android:gravity="bottom">

        <TextView
            android:id="@+id/footer_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Copyright Â© 2024 All rights reserved.\nMark Jayson Molina Aguda. "
            android:textAlignment="center"
            android:textColor="#F9ED69"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>



</LinearLayout>