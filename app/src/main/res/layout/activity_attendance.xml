<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layoutbackground"
    tools:context=".Attendance"
    android:orientation="vertical">

    <!--Header-->
    <LinearLayout
        android:id="@+id/header_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#B83B5E"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backButton_ImageButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="#B83B5E"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <include layout="@layout/header_layout"/>

        <ImageButton
            android:id="@+id/hamburger_ImageButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="#00000000"
            android:src="@drawable/hamburger"/>

    </LinearLayout>

    <!--Body-->
    <LinearLayout
        android:id="@+id/body_LinearLayout"
        layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="top"
        android:background="@drawable/round_body_bg"
        android:layout_margin="35px"
        android:padding="50px">
        <!--android:background="#F08A5D"-->

        <TextView
            android:id="@+id/dateAndTime_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Loading..."
            android:textColor="#FFF000"
            android:textAlignment="center"
            android:layout_gravity="left"
            android:textSize="20sp"
            android:background="#6A2C70"/>

        <TextView
            android:id="@+id/name_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F9ED69"
            android:textColor="#6A2C70"
            android:text="Name will appear here when punched in."
            android:textSize="20sp"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--
            <TextView
                android:id="@+id/day_TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Day"/>

            <TextView
                android:id="@+id/timeIn_AM_TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center"
                android:text="AM In"/>

            <TextView
                android:id="@+id/timeOut_AM_TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center"
                android:text="AM Out"/>

            <TextView
                android:id="@+id/timeIn_PM_TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center"
                android:text="PM In"/>

            <TextView
                android:id="@+id/timeOut_PM_TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center"
                android:text="PM Out"/>
                -->
            <TableLayout
                android:id="@+id/previewHeader_TableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#B83B5E">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:textColor="@color/white"
                        android:text="Day"
                        android:textSize="12sp"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:textColor="@color/white"
                        android:text="AM In"
                        android:textSize="12sp"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:textColor="@color/white"
                        android:text="AM Out"
                        android:textSize="12sp"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:backgroundTint="#F9ED69"
                        android:textColor="@color/white"
                        android:text="PM In"
                        android:textSize="12sp"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:backgroundTint="#F9ED69"
                        android:textColor="@color/white"
                        android:text="PM Out"
                        android:textSize="12sp"
                        android:textAlignment="center"/>
                </TableRow>
                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />
            </TableLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px">

            <TableLayout
                android:id="@+id/dtr_TableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TableLayout>
        </ScrollView>

    </LinearLayout>

    <!--Footer-->
    <LinearLayout
        android:id="@+id/footer_LineanLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B83B5E"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px">
                <Button
                    android:id="@+id/AMIn_Button"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F9ED69"
                    android:textColor="#6A2C70"
                    android:text="AM In"
                    android:textSize="12sp" />
                <Button
                    android:id="@+id/AMOut_Button"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F9ED69"
                    android:textColor="#6A2C70"
                    android:text="AM Out"
                    android:textSize="12sp" />
                <Button
                    android:id="@+id/PMIn_Button"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F9ED69"
                    android:textColor="#6A2C70"
                    android:text="PM In"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/PMOut_Button"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F9ED69"
                    android:textColor="#6A2C70"
                    android:text="PM Out"
                    android:textSize="12sp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</LinearLayout>